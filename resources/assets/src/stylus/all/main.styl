/*
Box
Border
Background
Text
Others
*/
@lost flexbox flex

body, html
	lost-align center
	width 100%
	height 100%
	font-family "Lato", sans-serif

section
	p
		font-size 20px
		font-weight 400
		line-height 1.5

	strong
		display inline-flex
		align-items center
		justify-content center
		position relative
		top 11px
		right 10px
		text-align center
		width 100px
		height 100px
		z-index 2

		span
			font-size 50px
			font-weight 400
			color #fff

		&::before
			content ""
			width 100px
			height 100px
			background #fc0
			position absolute
			left 0
			top 0
			border-radius 50%
			z-index -1

